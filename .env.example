# Copy this file to .env.local and fill in your real values. Do not commit .env.local.

# Firebase Web App (Client) - required
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
# Optional for Analytics
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=

# OpenAI
OPENAI_API_KEY=

# SMART on FHIR (Epic Sandbox)
NEXT_PUBLIC_SMART_CLIENT_ID=
SMART_SCOPES=launch/patient patient/*.write openid fhirUser offline_access
# Leave empty if not issued a secret
SMART_CLIENT_SECRET=
# Redirect path must point to your API route handler
SMART_REDIRECT_PATH=http://localhost:3000/api/smart/callback
# Epic sandbox issuer (we derive the token endpoint as `${SMART_ISSUER}/token`)
SMART_ISSUER=https://fhir.epic.com/interconnect-fhir-oauth/oauth2
# Epic sandbox FHIR base URL (persisted as cookie for client-side)
SMART_FHIR_BASE=https://fhir.epic.com/interconnect-fhir-oauth/api/FHIR/R4

# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
NEXT_PUBLIC_STRIPE_LINK_BETA=
NEXT_PUBLIC_STRIPE_LINK_PRO_MONTHLY=
NEXT_PUBLIC_STRIPE_LINK_PRO_YEARLY=
NEXT_PUBLIC_STRIPE_LINK_TEAM_MONTHLY=
NEXT_PUBLIC_STRIPE_LINK_TEAM_YEARLY=

# Firebase Admin (server-side, used by API routes/scripts)
# Use exactly one of the options below.
# 1) Base64-encoded service account JSON (recommended for local dev and scripts)
FIREBASE_SERVICE_ACCOUNT_BASE64=
# 2) Or individual credentials if deploying without base64 bundle
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=
